@using Bakery.ViewModels
@model ProductListViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Товары";
}

<h3 align="center">@Model.currCategory</h3>

<div class="row mt-5 mb-2">
    @{
        foreach(var Model in Model.getAllProducts)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@Model.img" alt="@Model.Name">
                <h3 align="center">@Model.Name</h3>
                <p align="center">Цена: @Model.Price.ToString("c")</p>
                <p><a class="btn btn-warning" asp-controller="ShopProduct" asp-action="AddToProduct" asp-route-id="@Model.Id">Добавить в корзину</a></p>
            </div>  
        }
    }
</div>

